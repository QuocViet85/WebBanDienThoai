@inject IAuthorizationService _authorizationService

@{
    var result = await _authorizationService.AuthorizeAsync(this.User, "ViewManageMenu");
}

@if (result.Succeeded)
{
    <a class="nav-link text-danger" asp-action="Index" asp-controller="AdminCP" asp-area="AdminCP">
           <i class="fas fa-cog"></i> Quản trị
    </a>
}







