@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Lấy lại mật khẩu?";
    Layout = "_LoginLayout.cshtml";
}

<style>
    .bg-password-image {
            background-image: url(/contents/SystemImages/ForgotPasswordImage.jpg);
            background-position: center;
        }
</style>

<!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-password-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-2">Lấy lại mật khẩu?</h1>
                                        <p class="mb-4">Nhập địa chỉ Email của tài khoản để lấy lại mật khẩu!</p>
                                    </div>
                                    <form class="user" method="post">
                                        <div asp-validation-summary="All" class="text-danger"></div>
                                        <div class="form-group">
                                            <input asp-for="Email" class="form-control form-control-user" />
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                        <button href="login.html" class="btn btn-primary btn-user btn-block">
                                            Lấy lại mật khẩu
                                        </button>
                                    </form>
                                    <hr>
                                    <div class="text-center">
                                        <a asp-action="Register" class="small">Đăng kí tài khoản mới!</a>
                                    </div>
                                    <div class="text-center">
                                        <a asp-action="Login" class="small">Đã có tài khoản? Đăng nhập!</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
